<!-- views/admin/markCourseCompleted.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Mark Course as Completed</title>
  <link rel="stylesheet" href="/css/admindashboardstyles.css">
</head>
<body>
  <header>
    <h1>Mark a Course as Completed</h1>
    <nav>
      <a href="/admin/admindashboard">Back to Dashboard</a>
    </nav>
  </header>

  <main>
    <h2>Student: <%= student.name %> (<%= student.rollNumber %>)</h2>
    <p>Email: <%= student.email %></p>

    <form action="/admin/student/markCompleted/<%= student._id %>" method="POST">
      <div class="form-group">
        <label for="courseCode">Course Code:</label>
        <input type="text" id="courseCode" name="courseCode" required placeholder="e.g. CSC-101">
      </div>
      <button type="submit">Mark as Completed</button>
    </form>
  </main>

  <footer>
    <p>&copy; <%= new Date().getFullYear() %> My University</p>
  </footer>
</body>
</html>
