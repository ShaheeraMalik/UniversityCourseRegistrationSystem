<!-- views/auth/login.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Login</title>
  <link rel="stylesheet" href="/css/loginstyles.css">
</head>
<body>
  <h1>Course Registration Login</h1>
  <form action="/auth/login" method="POST">
    <div>
      <label for="credential">Username / Roll Number:</label>
      <input type="text" name="credential" id="credential" required placeholder="Enter your username or roll number">
    </div>
    <div>
      <label for="password">Password:</label>
      <input type="password" name="password" id="password" required placeholder="Enter password">
    </div>
    <button type="submit">Login</button>
  </form>
</body>
</html>